<?xml version="1.0" encoding="UTF-8"?>
<sql>
    <select id="sel_name_mark">
        <fields>name,mark</fields>
        <from>Student</from>
        <where>
            mark>140,
            mark&lt;150
        </where>
    </select>
    <where id="condition1" class="Student" >
        @(mark)>?
    </where>
    <fields id="to_select" class="Student">
        @(id),@(name),@(mark)
    </fields>
    <where id="condition2" class="Student" >
        @(mark)>@{mark},
        @(mark)&lt;@{mark}
    </where>

    <insert id="insert1" class="Student" >
        <fields>*</fields>
        <class>Student</class>
        <value>@{*}</value>
    </insert>

    <update id="update1" class="Student" >
        <fields>name</fields>
        <class>Student</class>
        <value>good</value>
        <where>
            @(mark)=@{mark}
        </where>
    </update>



</sql>