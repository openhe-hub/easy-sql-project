<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapping[
        <!ELEMENT mapping (class)>
        <!ELEMENT class (id,fields,set)>
        <!ELEMENT id EMPTY>
        <!ELEMENT fields (field*)>
        <!ELEMENT set (foreign-key*,index*,join*)>
        <!ELEMENT field EMPTY>
        <!ELEMENT foreign-key EMPTY>
        <!ELEMENT index EMPTY>
        <!ELEMENT join EMPTY>
        <!ATTLIST class class-name CDATA #REQUIRED
                table-name CDATA #REQUIRED
                sql-file CDATA #IMPLIED>
        <!ATTLIST id field-name CDATA #REQUIRED
                 field-type CDATA #IMPLIED
                column-name CDATA #IMPLIED
                column-type CDATA #IMPLIED
                type CDATA #IMPLIED>
        <!ATTLIST field field-name CDATA #REQUIRED
                field-type CDATA #IMPLIED
                column-name CDATA #IMPLIED
                column-type CDATA #IMPLIED
                constraint CDATA #IMPLIED>
        <!ATTLIST foreign-key type CDATA #REQUIRED
                from CDATA #REQUIRED
                to CDATA #REQUIRED>
        <!ATTLIST index field CDATA #REQUIRED
                type CDATA #REQUIRED >
        <!ATTLIST join
                type CDATA #REQUIRED
                from-field CDATA #REQUIRED
                to-class CDATA #REQUIRED
                point CDATA #REQUIRED
                form CDATA #REQUIRED>
        ]>
<mapping>
    <class class-name="student" table-name="student" sql-file="newsql" >
        <id
                field-name="id"
                field-type="int"
                type="auto-increment"/>
        <fields>
            <field
                field-name="student_id"
                field-type="int"
                constraint="unique"
            />
            <field
                    field-name="name"
                    field-type="java.lang.String"
                    column-name="student-name"
                    constraint="not null,unique"
            />
            <field
                    field-name="teacher_id"
                    field-type="long"
            />
            <field
                    field-name="birthday"
                    field-type="java.util.Date"
            />
        </fields>
        <set>
            <foreign-key
                type="many to one"
                from="teacher_id"
                to="teacher.id"
            />
            <index
                    field="name"
                    type="fulltext"
            />
            <join type="many to one" form="left joinInfo"
                  from-field="teacher"
                  to-class="Teacher"
                  point="teacher_id->id"
            />
            <join type="one to one" form="inner joinInfo"
                  from-field="mark"
                  to-class="Mark"
                  point="student_id->student_id"
            />
        </set>
    </class>
</mapping>