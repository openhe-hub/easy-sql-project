<?xml version="1.0" encoding="UTF-8"?>
<sql>
    <select id="sel_mark_rank10" return="Student">
        <fields>@(id),@(name),@(mark)</fields>
        <from>Student</from>
        <where>
            @(mark)>?,
            @(mark)&lt;>@{mark}
        </where>
        <order type="desc">@(mark)</order>
        <limit>?,?</limit>
    </select>
    <where id="condition1" class="Student" >
        @(mark)>?
    </where>
    <fields id="to_select" class="Student">
        @(id),@(name),@(mark)
    </fields>


</sql>