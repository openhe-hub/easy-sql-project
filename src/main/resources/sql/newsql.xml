<?xml version="1.0" encoding="UTF-8"?>
<sql>
    <where id="condition">
        mark>?
    </where>
    <insert id="insert">
        <col>student_id,student_name</col>
        <values>
            (?,?)
        </values>
    </insert>
    <update id="update">
        <values>
            student_name=?,
            student_id=?
        </values>
        <where>
            id=?
        </where>
    </update>
    <delete id="delete">
        <where>
            mark=?
        </where>
    </delete>
    <select id="select1" class="default" return="map1"><col>*</col></select>
    <select id="select2" class="Student,Teacher" return="map2">
        <col>student.*,teacher.*</col>
        <join>Teacher</join>
        <where>
            teacher.id=?
        </where>
    </select>
    <result-map id="map1" class="default">
        <include>default</include>
    </result-map>
    <result-map id="map2" class="Student">
        <include>Student,Teacher</include>
    </result-map>
</sql>