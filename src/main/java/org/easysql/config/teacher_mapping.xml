<?xml version="1.0" encoding="UTF-8"?>
<mapping>
    <class class_name="Teacher" table_name="teacher">
        <id
                field_name="id"
                field_type="long"
                type="auto_increment"/>
        <fields>
            <field
                    field_name="name"
                    field_type="java.lang.String"
                    column_name="teacher_name"
                    constraint="not null"
            />
        </fields>
        <sets>
            <foreign_key
                    type="one-to-many"
                    from="teacher_id"
                    to="Teacher"
            />
        </sets>

    </class>
</mapping>